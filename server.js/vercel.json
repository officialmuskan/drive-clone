
{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        // send API requests to Express
      "dest": "index.js"
    },
    {
      "src": "/(.*)",            // send all other routes to React app
      "dest": "/dist/index.html"
    }
  ]
}
